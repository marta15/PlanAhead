<% layout('layouts/boilerplate') %>
    <h1>All Plans</h1>
    <a href="/plans/new">Create a new plan</a>

    <% for (let plan of plans) {%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%= plan.image%>" alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= plan.name%>, <%= plan.duration%> days
                        </h5>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= plan.location%>
                            </small>
                        </p>
                        <p class="card-text">
                            <%= plan.description%>
                        </p>
                        <a href="/plans/<%= plan._id%>" class="btn btn-primary">Details</a>
                    </div>
                </div>
            </div>
        </div>
        <% }%>